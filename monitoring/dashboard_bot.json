{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "title": "Telegram Bot Monitoring",
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["bot"],
  "timezone": "",
  "version": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Users",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "bot_users_total",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "options": {
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "area",
        "color": { "mode": "continuous-RdYlGr" },
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      }
    },
    {
      "id": 2,
      "title": "Cards",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "bot_cards_total",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "options": {
        "textMode": "value",
        "graphMode": "area",
        "colorMode": "value",
        "color": { "mode": "continuous-YlBl" },
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 3,
      "title": "Purchases",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "bot_purchases_total", "legendFormat": "", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "options": {
        "textMode": "value",
        "graphMode": "area",
        "colorMode": "value",
        "color": { "mode": "continuous-BlPu" },
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 4,
      "title": "Withdraw Requests",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "bot_withdraw_requests_total", "legendFormat": "", "refId": "A" }
      ],
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "options": {
        "textMode": "value",
        "graphMode": "area",
        "colorMode": "value",
        "color": { "mode": "continuous-greens" },
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },

    {
      "id": 5,
      "title": "Users Pulse",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "bot_users_total",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "hidden" },
        "drawStyle": "line",
        "lineInterpolation": "smooth",
        "fillOpacity": 25,
        "spanNulls": true,
        "color": { "mode": "continuous-BlYlRd" }
      }
    },

    {
      "id": 6,
      "title": "Purchases Pulse",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "increase(bot_purchases_total[1m])",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "hidden" },
        "drawStyle": "line",
        "lineInterpolation": "smooth",
        "fillOpacity": 35,
        "spanNulls": true,
        "color": { "mode": "continuous-RdYlGr" }
      }
    },

    {
      "id": 7,
      "title": "Errors Pulse",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "increase(bot_errors_total[1m])",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "hidden" },
        "drawStyle": "line",
        "lineInterpolation": "smooth",
        "fillOpacity": 40,
        "spanNulls": true,
        "color": { "mode": "continuous-reds" }
      }
    }
  ]
}
